<?xml version="1.0" ?>
<sdf version="1.7">
  <world name="default">


<!-- This is the ground plane -->
    <model name="ground_plane">
        <static>true</static>
        <link name="link">
            <collision name="collision">
            <geometry>
                <plane>
                <normal>0 0 1</normal>
                </plane>
            </geometry>
            </collision>
            <visual name="visual">
            <geometry>
                <plane>
                <normal>0 0 1</normal>
                <size>100 100</size>
                </plane>
            </geometry>
            <material>  
                <ambient>0.8 0.8 0.8 1</ambient>
                <diffuse>0.8 0.8 0.8 1</diffuse>
                <specular>0.8 0.8 0.8 1</specular>
            </material>
            </visual>
        </link>
    </model>
<!-- End of ground plane -->


    <model name="george_droyd">
      <pose>0 0 1 0 0 0</pose>
      <link name="base">
        <visual name="box1">
          <pose>0 0 0.5 0 0 0</pose>
          <geometry>
            <box>
              <size>1.5 1.5 1</size>
            </box>
          </geometry>
        </visual>
        <visual name="box2">
          <pose>0 0 -0.25 0 0 0</pose>
          <geometry>
            <box>
              <size>1 1 0.5</size>
            </box>
          </geometry>
        </visual>

        <collision name="base_collision">
          <geometry>
            <box>
              <size>1 1 1</size>
            </box>
          </geometry>
        </collision>
      </link>

      <!-- George Head -->
      <joint name="base_to_head" type="fixed">
        <pose relative_to="base">0 0 1 0 0 0</pose>
        <parent>base</parent>
        <child>head</child>
      </joint>

      <link name="head">
        <visual name="visual">
          <pose>0 0 2 1.57 0 -1.57</pose>
          <geometry>
            <mesh>
              <uri>file:///home/daxton/simulation/ros2_ws/src/sim_files/meshes/george_floyd_memorial_bust.glb</uri>
              <scale>0.8 0.8 0.8</scale>
            </mesh>
          </geometry>
        </visual>

        <inertial>
          <mass>10.0</mass>
          <inertia>
            <ixx>0.1</ixx><iyy>0.1</iyy><izz>0.1</izz>
            <ixy>0.0</ixy><ixz>0.0</ixz><iyz>0.0</iyz>
          </inertia>
        </inertial>
      </link>

      <!-- end George Head -->

      <!-- Right arm -->


      <!-- shoulder -->
      <plugin name="gz::sim::systems::JointController" filename="gz-sim-joint-controller-system">
        <joint_name>base_to_shoulder</joint_name>
        <topic>/right_shoulder/effort_cmd</topic>
        <command_type>effort</command_type>
      </plugin>

      <joint name="base_to_shoulder" type="revolute">
        <pose relative_to="base">0 0.75 0.75 0 0 0</pose>
        <parent>base</parent>
        <child>shoulder</child>
        <axis>
          <xyz>1 0 0</xyz>
          <limit>
            <lower>-1.57</lower>
            <upper>1.57</upper>
            <effort>10</effort>
            <velocity>5</velocity>
          </limit>
        </axis>
      </joint>

      <link name="shoulder">
        <pose relative_to="base">0 0.75 0.75 1.57 0 0</pose>
        <visual name="shoulder_visual">
          <geometry>
            <cylinder>
              <radius>0.15</radius>
              <length>0.05</length>
            </cylinder>
          </geometry>
        </visual>

        <inertial>
          <mass>1.0</mass>
          <inertia>
            <ixx>0.1</ixx><iyy>0.1</iyy><izz>0.1</izz>
            <ixy>0.0</ixy><ixz>0.0</ixz><iyz>0.0</iyz>
          </inertia>
        </inertial>
      </link>
      <!-- end shoulder-->

      

      <!-- end right arm -->



    </model>

    
    <light name="sun" type="directional">
      <cast_shadows>true</cast_shadows>
      <pose>0 0 10 0 0 0</pose>
      <diffuse>1 1 1 1</diffuse>
      <specular>0.1 0.1 0.1 1</specular>
      <direction>0 0 -1</direction>
    </light>

  </world>
</sdf>
